Config  { font     = "xft:lettergothicmono:style=bold:pixelsize=12"
        , bgColor       = "#073642"
        , fgColor       = "#657b83"
        , position      = Top
        , lowerOnStart  = True
        , commands      = [ Run Date "%a %b %_d %Y %H:%M:%S" "theDate" 10
                          , Run StdinReader
                          , Run Com "~/bin/report-volume" [] "myvol" 20
                          , Run Com "~/bin/report-batt" [] "mybatt" 10
                          , Run Com "~/bin/report-temp" [] "mytemp" 100
                          , Run Weather "KSEA" ["-t","Seattle:<tempF>°<skyCondition>"] 36000
                          , Run Cpu ["-L","50","-H","80","--normal","yellow","--high","red"] 10
