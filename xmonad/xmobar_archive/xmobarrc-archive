                            "-l", "#6c71c4", "-n","#6c71c4", "-h", "#719e07"] 50
                          , Run Swap [] 10
                          , Run Wireless "wlan0" ["-t","<essid>:<quality> "] 
                          100
                          ]
        , sepChar       = "%"
        , alignSep      = "}{"
        , template      = " %StdinReader% }{ <fc=#b58900>Vol:%myvol%</fc> <fc=#2aa198>%wlan0wi%</fc> <fc=#93a1a1>%mybatt%</fc> <fc=#6c71c4>%cpu% %cpufreq% %mytemp%° %swap% </fc> <fc=#d33682>%KSEA%  </fc><fc=#268bd2>%theDate%</fc> "
        }
